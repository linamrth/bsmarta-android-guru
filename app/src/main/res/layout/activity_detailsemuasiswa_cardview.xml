<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:xmnls="http://schemas.android.com/apk/res-auto"
    xmlns:cv="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragmentdetailsemuasiswa"
    android:padding="3dp">

    <LinearLayout
        android:id="@+id/llstatusrapot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_height="match_parent"
            android:paddingLeft="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginRight="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvhari"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:fontFamily="@font/nunitosemibold"
                    android:textColor="#362240"
                    android:text="Senin"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvtanggal"
                    android:layout_below="@+id/tvhari"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:fontFamily="@font/nunitosemibold"
                    android:textColor="#362240"
                    android:text="Senin, 14 Mei 2018"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvnamaguru"
                    android:layout_below="@+id/tvtanggal"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:fontFamily="@font/nunitosemibold"
                    android:textColor="#362240"
                    android:text="Shifwatin"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvstatusrapot"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_below="@+id/tvnamaguru"
                    android:textSize="12dp"
                    android:fontFamily="@font/nunitosemibold"
                    android:background="@drawable/background_statusrapot"
                    android:textColor="@color/white"
                    android:text="Sudah Terisi"
                    android:layout_marginBottom="5dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>